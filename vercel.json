{
  "version": 2,
  "builds": [
    { "src": "api/**/*.js", "use": "@vercel/node" },
    { "src": "public/**/*", "use": "@vercel/static" }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "/api/$1.js" },
    { "src": "/404", "dest": "/public/404.html" }, 
    { "src": "/(.*)", "dest": "/public/$1" },
    { "src": "/.*", "status": 404, "dest": "/public/404.html" }
  ]
}
